@page
@model HospitialManagementSystem.Pages.Authentication.LoginModel
@{
}
<div style="display: flex;box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;border-radius: 12px ; height: 596px; margin-top: 55px">

    <div style="width: 49%">
        <figure>
            <img src="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/22/a1/9c/80/essentia-luxury-hotel.jpg?w=700&h=-1&s=1" style="width: 100%;height: 100%; border-radius: 12px" alt="sing up image">
        </figure>
    </div>

    <div style="width: 49%; padding-left: 50px; padding-top: 50px">
        <div>
            <h1 class="text-center" style="font-size:x-large">Sign in</h1>
        </div>
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form method="post">
                <div class="form-group mb-2">
                    <label asp-for="@Model.Username" class="form-label">Username<span style="color:red">*</span></label>
                    <input asp-for="@Model.Username" class="form-control">
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="@Model.Password" class="form-label">Password<span style="color:red">*</span></label>
                    <input asp-for="@Model.Password" class="form-control">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-1 d-flex justify-content-center mt-5">
                    <button type="submit" class="btn btn-primary w-100" title="Log in hotel">Log in</button>
                </div>
            </form>
        </div>
    </div>

</div>