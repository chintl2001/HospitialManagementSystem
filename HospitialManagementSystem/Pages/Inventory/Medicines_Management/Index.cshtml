@model HospitialManagementSystem.Pages.Inventory.Medicines_Management.IndexModel

@{
    ViewData["Title"] = "Medicine List";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
@*search*@
<form asp-controller="Index" asp-action="Index" method="get">
    <p>
        Search Name/Description : <input type="text" name="searchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
@*.*@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Medicine) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
